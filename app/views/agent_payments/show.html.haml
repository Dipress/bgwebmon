- model_class = AgentPayment
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:contract_id) + ':'
  %br
  = @agent_payment.contract_id
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @agent_payment.user_id
%p
  %strong= model_class.human_attribute_name(:manager_id) + ':'
  %br
  = @agent_payment.manager_id
%p
  %strong= model_class.human_attribute_name(:value) + ':'
  %br
  = @agent_payment.value
%p
  %strong= model_class.human_attribute_name(:text) + ':'
  %br
  = @agent_payment.text
%p
  %strong= model_class.human_attribute_name(:managed_at) + ':'
  %br
  = @agent_payment.managed_at

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), agent_payments_path, :class => 'btn'
  =# link_to t('.edit', :default => t("helpers.links.edit")), edit_agent_payment_path(@agent_payment), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), agent_payment_path(@agent_payment), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
