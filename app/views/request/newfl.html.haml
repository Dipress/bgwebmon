%link{:href => "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css", :rel => "stylesheet", :type => "text/css"}
%script{:src => "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"}
%script{:src => "http://api-maps.yandex.ru/2.0/?load=package.full&lang=ru-RU"}
%div#createrequestfl
	- @requestfl.errors.each do |model, error|
		%p= "#{model} - #{error}"
	= form_for @requestfl , :url => { :action => "createfl" } do |r|
		.editor-field
			%label * ФИО:
			%br	
			= r.text_field :fio
		.editor-field
			%label * Адресс почтовый:
			%br	
			= r.text_field :adress_post
		.editor-field
			%label * Адресс подключения (введите адресс и нажмите "Показать на карте" или кликните по карте):
			%br	
			%input#street{:type => "text", :name => "mapsearch", :value => @requestfl[:adress_connection]}
			%button#searchplace Показать на карте
			%div#requestmap
		.editor-field
			%label Email:
			%br	
			= r.text_field :email
		.editor-field
			%label * Телефон:
			%br	
			= r.text_field :telephone
		.editor-field
			%label * Идентификационный код:
			%br	
			= r.text_field :in
		.editor-field
			%label * Паспорт серия\номер:
			%br	
			= r.text_field :pasport
		.editor-field
			%label * Паспорт кем выдан:
			%br	
			= r.text_field :pasport_authority
		.editor-field
			%label * Паспорт дата выдачи:
			%br	
			= r.text_field :pd
		.editor-field
			%label * Форма оплаты:
			%br	
			= r.collection_select :payment_form, ContractParameterType7Value.where(:pid => 52), :id, :title, {:prompt => 'Выберите тип оплаты'}
		.editor-field
			%label IP адресс:
			%br	
			= r.text_field :ip
		.editor-field
			%label Логин:
			%br	
			= r.text_field :login
		.editor-field
			%label Пароль:
			%br	
			= r.text_field :password
		.editor-field
			%label * Технология подключения:
			%br	
			= r.collection_select :technology, ContractParameterType7Value.where(:pid => 53), :id, :title, {:prompt => 'Выберите технологию подключения'}
		.editor-field
			%label * Точка подключения:
			%br	
			= r.collection_select :node, ContractParameterType7Value.where(:pid => 54), :id, :title, {:prompt => 'Выберите точку подключения'}
		.editor-field
			%label * Тарифный план:
			%br	
			= r.collection_select :tariffplan_id, Tariffplan.all, :id, :title, {:prompt => 'Выберите тарифный план'}
		.editor-field
			%label Дополнительная информация:
			%br	
			= r.text_area :description
		.editor-field
			= r.hidden_field :user_id, :value => @user.id
			= r.hidden_field :latlng_connection
			= r.hidden_field :adress_connection
		.editor-field
			= r.submit "Отправить заявку"
:javascript
	$(function(){
	var m = ["Январь", "Февраль", "Март", "Апрель", "Май", "Июнь", "Июль", "Август", "Сентябрь", "Октябрь", "Ноябрь", "Декабрь"],
		sm = ["Янв", "Фев", "Мар", "Апр", "Май", "Июн", "Июл", "Авг", "Сен", "Окт", "Ноя", "Дек"],
		d = ["Воскресенье", "Понедельник", "Вторник", "Среда", "Четверг", "Пятница", "Суббота"],
		sd = ["Вс", "Пд", "Вт", "Ср", "Чт", "Пт", "Сб"];
			$("input#requestfl_pd").datepicker({
			dateFormat: "dd.mm.yy",
			monthNames: m,
			changeMonth: true,
			changeYear: true,
			yearRange: '-50:-0',
			monthNamesShort: sm,
			dayNames: d,
			dayNamesMin: sd});

	ymaps.ready(create);

	});