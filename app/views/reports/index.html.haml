.page-header
  %h1
    Доходы и Расходы
%div
  = link_to t('.new', :default => t("helpers.links.new")), new_report_path, :class => 'btn btn-primary', style: "color: #fff;"
%div
  %p

%table.table.table-bordered
  %thead
    %tr
      %th{:colspan => 3} Базовая станция
      %th{:colspan => 6} Расходы
      %th Доходы
      %th Действия
    %tr
      %th Название 
      %th Всего договоров
      %th Активных договоров
      %th Аренда
      %th Канал
      %th Электро
      %th РЧР
      %th Прочие
      %th Итого: 
      %th Итого: 
      %th 
  %tbody
    - @reports.each do |r|
      %tr
        %td= link_to "#{r.title}", report_path(r.id)
        %td= r.contracts_all
        %td= r.contracts_active
        %td= r.rent
        %td= r.channel
        %td= r.electro
        %td= r.frequency
        %td= r.other
        %td= r.outcome
        %td= r.income
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_report_path(r.id), :class => 'btn btn-primary'
